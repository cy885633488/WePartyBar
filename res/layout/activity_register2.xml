<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF4040">

        <Button
            android:id="@+id/register2_btn_back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="手机验证"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/register2_btn_back"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我们聚会吧已经将短信验证码发送到您的手机，请输入短信验证码"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/register2_cxhq"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="重新获取"
            android:layout_weight="3"
            android:background="#FF4040"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/register2_queding"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="#fff"
        android:textSize="25sp"
        android:text="确定"
        android:gravity="center"
        android:background="#FF4040"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>